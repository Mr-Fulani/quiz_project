:root {
    --clr: #0f0;
}

body {
    background: #151F28 !important;
}

.matrix-rain {
    position: fixed;
    top: 50px;
    left: 50%;
    transform: translateX(-50%) scale(0.6);
    z-index: 15;
    pointer-events: none;
}

.container {
    position: relative;
    height: 400px;
    width: 100%;
    display: flex;
    justify-content: center;
    animation: matrix_color 5s linear infinite;
}

.container .cloud {
    position: relative;
    width: 300px;
    z-index: 100;
    filter: drop-shadow(0 0 35px var(--clr));
}

.container .cloud h2 {
    position: relative;
    color: var(--clr);
    font-size: 2em;
    text-align: center;
}

.container .cloud h2::before {
    content: '';
    position: absolute;
    top: -115px;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 100px;
    width: 120%;
    height: 100px;
    background: var(--clr);
}

.container .cloud h2::after {
    content: '';
    position: absolute;
    top: -150px;
    left: 25px;
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: var(--clr);
    box-shadow: 120px -30px 0 10px var(--clr);
}

.container .cloud .drop {
    position: absolute;
    top: 60px;
    height: 20px;
    line-height: 20px;
    color: var(--clr);
    transform-origin: bottom;
    animation: matrix_animate 2s linear infinite;
}

@keyframes matrix_animate {
    0% {
        transform: translateY(0) scaleY(0);
        transform-origin: top;
    }
    10% {
        transform: translateY(0) scaleY(0.25);
        transform-origin: top;
    }
    20% {
        transform: translateY(0) scaleY(1);
    }
    70% {
        transform: translateY(300px) scaleY(1);
        transform-origin: bottom;
    }
    80% {
        transform: translateY(300px) scaleY(1);
        transform-origin: bottom;
    }
    100% {
        transform: translateY(300px) scaleY(0);
        transform-origin: bottom;
        text-shadow: -180px 0 0 var(--clr), 180px 0 var(--clr);
    }
}

@keyframes matrix_color {
    0% {
        filter: hue-rotate(0deg);
    }
    100% {
        filter: hue-rotate(360deg);
    }
}

/* Добавляем слой для фона */
.background-layer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #151F28;
    z-index: 1;
}

/* Убрали все стили навигации из этого файла */

.indicator {
    background: #29fd53;
    border: 6px solid var(--clr);
}

.indicator::before,
.indicator::after {
    box-shadow: 1px -10px 0 0 var(--clr);
}

/* Добавляем медиа-запросы для разных устройств */
@media screen and (max-width: 768px) {
    .matrix-rain__container {
        transform: scale(0.7);
    }
}

@media screen and (min-width: 1024px) {
    .matrix-rain__container {
        transform: scale(0.9);
    }
}

.matrix-container {
    --matrix-color: #0f0;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 15;
    background: transparent;
}

.container {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    animation: animateColor 8s linear infinite;
}

.drop {
    color: var(--matrix-color);
    text-shadow: 0 0 10px var(--matrix-color);
    font-size: 1.2em;
    font-weight: bold;
    opacity: 0.7;
}

@keyframes animateColor {
    0% {
        filter: hue-rotate(0deg);
    }
    100% {
        filter: hue-rotate(360deg);
    }
}